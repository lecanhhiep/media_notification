<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:padding="10dp">
    <TextView
        android:textSize="15dp"
        android:textColor="#000"
        android:id="@+id/title"
        android:text="dfadsf  sdfadsf adsfadsf asdfad asdfadsf dafio adfouiasd fadfasdu fuads yfiadsf "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="2dp"
        android:singleLine="false"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/prev"

        android:maxLines="2"
        />
    <TextView
        android:textSize="14dp"
        android:textColor="#838383"
        android:id="@+id/author"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title"
        android:layout_marginLeft="9dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <ImageView
        android:id="@+id/prev"
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/toggle"
        android:padding="0dp"
        android:paddingRight="0dp"
        android:src="@drawable/baseline_skip_previous_black_36"
        />
    <ImageView
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/next"
        android:padding="3dp"
        android:paddingRight="0dp"
        />
    <ImageView
        android:id="@+id/next"
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:padding="0dp"
        android:layout_toLeftOf="@id/close"
        android:src="@drawable/baseline_skip_next_black_36"
        />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:padding="6dp"
        android:src="@drawable/android_close_icon"
        />
</RelativeLayout>